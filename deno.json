{
  "tasks": {
    "dev": "deno run -RE --allow-ffi --allow-net --reload --check=all --watch main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "deno test --allow-env"
  },
  "imports": {
    "@effect/language-service": "npm:@effect/language-service@^0.23.3",
    "@std/assert": "jsr:@std/assert@1",
    "@effect/platform": "npm:@effect/platform@^0.84.11",
    "@effect/platform-node": "npm:@effect/platform-node@^0.85.16",
    "effect": "npm:effect@^3.16.7",
    "typescript": "npm:typescript@^5.8.3"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [],
      "exclude": []
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": false
  },
  "nodeModulesDir": "auto",
  "unstable": [
    "sloppy-imports"
  ]
}