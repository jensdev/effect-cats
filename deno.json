{
  "tasks": {
    "dev": "deno task --cwd=packages/server dev",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "deno test --allow-env"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [],
      "exclude": []
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": false
  },
  "workspace": ["./packages/domain", "./packages/server", "./packages/cli"],
  "nodeModulesDir": "auto"
}
